        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="208dp"
            android:layout_height="48dp"
            android:textColor="#FFFF"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.864"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextAddress"
            app:layout_constraintVertical_bias="0.055"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textViewPincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerCity"
            android:fontFamily="@font/poppins_light"
            android:text="Zipcode:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCity"
            app:layout_constraintVertical_bias="0.135" />

        <EditText
            android:id="@+id/editTextPincode"
            android:layout_width="190dp"
            android:layout_height="57dp"
            android:layout_below="@id/textViewPincode"
            android:fontFamily="@font/poppins_light"
            android:hint="Please enter pincode"
            android:inputType="number"
            android:textColor="#FFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.751"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerCity"
            app:layout_constraintVertical_bias="0.055" />

        <TextView
            android:id="@+id/textViewSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPincode"
            android:fontFamily="@font/poppins_light"
            android:text="Subject:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPincode"
            app:layout_constraintVertical_bias="0.258" />

        <EditText
            android:id="@+id/editTextSubject"
            android:layout_width="190dp"
            android:layout_height="57dp"
            android:layout_below="@id/textViewSubject"
            android:fontFamily="@font/poppins_light"
            android:hint="Please enter your Subject"
            android:textColor="#FFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.797"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPincode"
            app:layout_constraintVertical_bias="0.134" />

