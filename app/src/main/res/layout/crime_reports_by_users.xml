        <!--  Card View  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="363dp"
            android:layout_height="474dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <!--  Inner Constraint Layout 1 inside the Card View for the Card View Content on top  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="328dp"
                android:layout_height="345dp">

                <!--  "Name" text view  -->
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Name:"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <!--  "person name" text view  -->

                <!--  "City" text view  -->

                <!--  "City Name" text view  -->
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="reporter name"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.413"
                    app:layout_constraintStart_toEndOf="@+id/tv1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="City:"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv1"
                    tools:ignore="HardcodedText" />

                <!--  "Crime" text view  -->

                <!--  "Crime details" text view  -->


                <!--  "Status" text view  -->

                <!--  "Status description" text view  -->

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="city"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.408"
                    app:layout_constraintStart_toEndOf="@+id/tv3"
                    app:layout_constraintTop_toBottomOf="@+id/tv2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Details:"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv3"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="crime details"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.464"
                    app:layout_constraintStart_toEndOf="@+id/tv5"
                    app:layout_constraintTop_toBottomOf="@+id/tv4"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Status:"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv5"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="status"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.418"
                    app:layout_constraintStart_toEndOf="@+id/tv5"
                    app:layout_constraintTop_toBottomOf="@+id/tv6"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/crimeImage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv8"
                    tools:srcCompat="@tools:sample/avatars" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--  End of inner constraint layout 1  -->

            <!-- Linear Layout for action buttons for report-->
            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/viewBtn"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="28dp"
                    android:text="View"
                    tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

                <Button
                    android:id="@+id/updateBtn"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="28dp"
                    android:text="Update"
                    tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

                <Button
                    android:id="@+id/deleteBtn"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"
                    android:layout_marginBottom="28dp"
                    android:text="Delete"
                    tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--  End of Card View  -->

</LinearLayout>
